@model Product

@section Header{ <h1 class="title-details">Product Registry</h1>}

<script src="~/js/file-upload-action.js" asp-append-version="true"></script>
<form method="post" enctype="multipart/form-data" asp-controller="Product" asp-action="AddProducts">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ShortDescription"></label>
        <input asp-for="ShortDescription" class="form-control" />
        <span asp-validation-for="ShortDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LongDescription"></label>
        <input asp-for="LongDescription" class="form-control" />
        <span asp-validation-for="LongDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="NotMappedPic1"></label>
        <input asp-for="NotMappedPic1" class="form-control" />
        <span asp-validation-for="NotMappedPic1" class="text-danger"></span>
    </div>
    <div>
        Optional:
        <label asp-for="NotMappedPic2"></label>
        <input asp-for="NotMappedPic2" class="form-control" />
        <span asp-validation-for="NotMappedPic2" class="text-danger"></span>
    </div>
    <div>
        Optional:
        <label asp-for="NotMappedPic3"></label>
        <input asp-for="NotMappedPic3" class="form-control" />
        <span asp-validation-for="NotMappedPic3" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Register</button>
    </div>
</form>

@section Scripts {
    <partial name="General/_ValidationScriptsPartial" />
}
