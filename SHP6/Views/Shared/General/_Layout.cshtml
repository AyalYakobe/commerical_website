<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <header class="border-bottom text-center header background">
        <div role="main" class="col-6 text-right">
            @RenderSection("Header", required: false)
        </div>
    </header>
    <div class="container">
        <div class="row pb-3">
            <div role="main" class="col border-right h-auto overflow-auto">
                @RenderBody() 
            </div>
            <div class="col-4">
                <div>
                    @await Html.PartialAsync("Login/_PartialLogin")
                </div>
                <div class="col border-top border-primary">
                    @await Html.PartialAsync("General/_PartialNav")
                </div>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
</body>
</html>

<footer class="text-muted">
    <div class="container">
        &copy; 2021 - SHP6 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@RenderSection("Scripts", required: false)
